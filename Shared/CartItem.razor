    <fieldset class="vertical-container">
        <span>@produto.descricao</span>
        <span>Preço: R$ @produto.preco</span>
        <button id="remover" @onclick="remover"><b>Remover</b></button>
        <NumberSpinner currentCount=1 ></NumberSpinner>
