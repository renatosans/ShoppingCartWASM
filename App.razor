@inject HttpClient Http
@inject DialogService DialogService
@using wasmSample.Shared


<div style="text-align:center">
    <div id="grid" class="grid">
        @foreach (var produto in dadosProdutos){
            <ProductCatalog produto="@produto" shoppingCart="@shoppingCart" />
        }
    </div>
</div>

<div class="shoppingCart" >
    @foreach (var produto in shoppingCart.produtosAdicionados)
    {
        <CartItem produto="@produto"></CartItem>
    }
</div>

<RadzenDialog></RadzenDialog>
<RadzenButton Click="@ButtonClicked" Text="Hi"></RadzenButton>

@code {
    private Produto[] dadosProdutos = new Produto[] { };
    private ShoppingCart shoppingCart = new ShoppingCart("comprador 1");

    protected override async Task OnInitializedAsync()
    {
        dadosProdutos = await Http.GetFromJsonAsync<Produto[]>("mock_data/listaProdutos.json");
    }

    void ButtonClicked() {
        DialogService.Open("Informação", ds => @<RadzenCard Style="padding: 1y0px;">
        <p Style="margin-bottom: 10px;">Produto adicionado ao carrinho.</p>
        <div class="row">
            <div class="col-md-12">
                <RadzenButton Text="Ok" Click="()=> ds.Close(true)" ButtonStyle="ButtonStyle.Secondary" Style="margin-bottom: 10px; width: 150px" />
            </div>
        </div>
        </RadzenCard>        
        );
    }

}
